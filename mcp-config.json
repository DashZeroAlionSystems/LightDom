{
  "mcpServers": {
    "n8n-mcp": {
      "command": "npx",
      "args": [
        "n8n-mcp"
      ],
      "env": {
        "MCP_MODE": "stdio",
        "LOG_LEVEL": "error",
        "DISABLE_CONSOLE_OUTPUT": "true",
        "N8N_API_URL": "http://localhost:5678/",
        "N8N_API_KEY": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiJhMjYwMzkxMC00ODc1LTQ2MGItYWQwZC0xZDk5MmJlZjliMWMiLCJpc3MiOiJuOG4iLCJhdWQiOiJwdWJsaWMtYXBpIiwiaWF0IjoxNzYxOTQzMDUyfQ.Xm3ZVweLIv6f2d_LvL55xC98-fnGsWYbQpguo7DT1tw"
      }
    },
    "deepseek-tools": {
      "command": "node",
      "args": [
        "--loader",
        "ts-node/esm",
        "src/mcp/deepseek-mcp-server.ts"
      ],
      "env": {
        "MCP_MODE": "stdio",
        "LOG_LEVEL": "info",
        "DB_HOST": "localhost",
        "DB_PORT": "5432",
        "DB_NAME": "dom_space_harvester",
        "DB_USER": "postgres",
        "DB_PASSWORD": "postgres",
        "DEEPSEEK_API_URL": "https://api.deepseek.com/v1",
        "DEEPSEEK_API_KEY": "${DEEPSEEK_API_KEY}",
        "DEEPSEEK_MODEL": "deepseek-reasoner"
      },
      "description": "DeepSeek tools for schema management, workflow automation, and code analysis"
    },
    "knowledge-graph": {
      "command": "node",
      "args": [
        "knowledge-graph-mcp-server.js"
      ],
      "env": {
        "MCP_MODE": "stdio",
        "LOG_LEVEL": "error",
        "POSTGRES_HOST": "localhost",
        "POSTGRES_PORT": "5432",
        "POSTGRES_DB": "knowledge_graph",
        "POSTGRES_USER": "kg_user",
        "POSTGRES_PASSWORD": "kg_password"
      },
      "description": "Knowledge graph MCP server for memory and relationship management"
    }
  },
  "toolConfiguration": {
    "deepseek": {
      "enabledCategories": [
        "schema",
        "workflow",
        "codeAnalysis",
        "database",
        "filesystem",
        "configuration"
      ],
      "permissions": {
        "schema": [
          "read:schema",
          "write:schema",
          "analyze:schema"
        ],
        "workflow": [
          "read:workflow",
          "write:workflow",
          "execute:workflow"
        ],
        "codeAnalysis": [
          "read:files",
          "analyze:code"
        ],
        "database": [
          "read:database"
        ],
        "filesystem": [
          "read:files",
          "write:files"
        ],
        "configuration": [
          "read:config",
          "write:config"
        ]
      },
      "safeguards": {
        "requireApprovalForWrite": true,
        "validateSchemaBeforeExecution": true,
        "maxConcurrentOperations": 10,
        "timeoutSeconds": 300
      }
    }
  },
  "schemaConfiguration": {
    "autoDiscovery": {
      "enabled": true,
      "scanIntervalMinutes": 60,
      "includePaths": [
        "schemas/**/*.json",
        "src/**/*.schema.ts"
      ],
      "excludePaths": [
        "node_modules/**",
        "dist/**",
        "build/**"
      ]
    },
    "relationshipMapping": {
      "algorithms": [
        "property-match",
        "naming-convention",
        "type-compatibility",
        "structural-similarity",
        "semantic-analysis"
      ],
      "minConfidence": 0.3,
      "autoSaveToDatabase": true,
      "enableTransitiveInference": true
    },
    "validation": {
      "strictMode": false,
      "allowAdditionalProperties": true,
      "validateReferences": true
    }
  },
  "workflowConfiguration": {
    "defaultExecutionMode": "sequential",
    "enableSchemaBinding": true,
    "validateInputs": true,
    "validateOutputs": true,
    "retryPolicy": {
      "maxRetries": 3,
      "retryDelayMs": 1000,
      "backoffMultiplier": 2
    }
  },
  "behaviorConfiguration": {
    "deepseek": {
      "autoGenerateSchemas": true,
      "autoLinkRelationships": true,
      "enableSelfImprovement": true,
      "learningMode": "active",
      "reasoningPattern": "chain-of-thought",
      "safetyMode": "strict",
      "maxSelfModifications": 5,
      "requireHumanApprovalFor": [
        "database:write",
        "file:delete",
        "schema:delete",
        "workflow:execute:production"
      ]
    }
  },
  "integrations": {
    "n8n": {
      "enabled": true,
      "baseUrl": "http://localhost:5678",
      "webhookUrl": "http://localhost:5678/webhook"
    },
    "database": {
      "enabled": true,
      "connectionPooling": true,
      "maxConnections": 20
    },
    "vectorDatabase": {
      "enabled": false,
      "provider": "pinecone",
      "apiKey": "${VECTOR_DB_API_KEY}"
    }
  },
  "monitoring": {
    "enableMetrics": true,
    "enableLogging": true,
    "logLevel": "info",
    "metricsInterval": 60000,
    "healthCheckInterval": 30000
  }
}