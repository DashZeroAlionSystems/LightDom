{
  "name": "lightdom",
  "main": "electron/main.js",
  "homepage": "./",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node start-complete-system.js",
    "start:blockchain": "node start-blockchain.js",
    "start:desktop": "node start-desktop.js",
    "api": "node api-server-express.js",
    "dev": "vite",
    "build": "vite build",
    "deploy": "node deploy-automation.js",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.2",
    "@tailwindcss/postcss": "^4.1.13",
    "@tensorflow/tfjs": "^4.22.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "antd": "^5.27.4",
    "autoprefixer": "^10.4.21",
    "axios": "^1.12.2",
    "chalk": "^5.6.2",
    "cheerio": "^1.1.2",
    "commander": "^11.1.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.15.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "hardhat": "^3.0.6",
    "helmet": "^8.1.0",
    "lucide-react": "^0.544.0",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "puppeteer": "^24.23.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "uuid": "^9.0.0",
    "vite": "^7.1.5",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "wait-on": "^9.0.0"
  },
  "build": {
    "appId": "com.lightdom.app",
    "productName": "LightDom Desktop",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
