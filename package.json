{
  "name": "lightdom-decentralized-storage-platform",
  "version": "1.0.0",
  "description": "LightDom - A blockchain-based DOM optimization platform with decentralized storage capabilities",
  "main": "index.js",
  "scripts": {
    "start": "node start-complete-system.js",
    "start:blockchain": "node start-blockchain.js",
    "start:desktop": "node start-desktop.js",
    "api": "node api-server-express.js",
    "dev": "vite",
    "build": "vite build",
    "deploy": "node deploy-automation.js",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "cli": "tsx src/cli/WebMiningCLI.ts",
    "demo": "tsx src/examples/WebMiningDemo.ts",
    "test:mining": "jest src/core/*.test.ts",
    "test:integration": "jest src/tests/integration.test.ts",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:contracts": "hardhat run scripts/deploy.js",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy.js --network testnet",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "verify": "hardhat verify",
    "coverage": "hardhat coverage",
    "size": "hardhat size-contracts",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build:contracts": "hardhat compile",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start:backend": "cd backend && npm start",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "blockchain",
    "decentralized-storage",
    "ethereum",
    "solidity",
    "react",
    "typescript",
    "lightdom",
    "dom-optimization",
    "web-mining",
    "electron"
  ],
  "author": "LightDom Team",
  "license": "MIT",
  "dependencies": {
    "@ant-design/icons": "^6.0.2",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "antd": "^5.27.4",
    "autoprefixer": "^10.4.21",
    "axios": "^1.12.2",
    "chalk": "^5.6.2",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "lucide-react": "^0.544.0",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "uuid": "^9.0.0",
    "vite": "^7.1.5",
    "winston": "^3.10.0",
    "@openzeppelin/contracts": "^4.9.3",
    "ethers": "^6.7.0",
    "web3": "^4.1.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "chai": "^4.3.7",
    "concurrently": "^9.2.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "hardhat": "^2.17.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.0.0",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.1",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "wait-on": "^9.0.0",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8"
  },
  "bin": {
    "web-mining": "./src/cli/WebMiningCLI.ts"
  },
  "build": {
    "appId": "com.lightdom.app",
    "productName": "LightDom Desktop",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}