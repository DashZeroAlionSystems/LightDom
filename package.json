{
  "name": "lightdom",
  "main": "electron/main.js",
  "homepage": "./",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node start-blockchain-app.js",
    "start:blockchain": "node start-blockchain-app.js",
    "start:desktop": "node start-desktop.js",
    "start:api": "node api-server-express.js",
    "start:frontend": "vite",
    "dev": "vite",
    "build": "vite build",
    "build:contracts": "hardhat compile",
    "deploy": "node deploy-automation.js",
    "deploy:contracts": "hardhat run scripts/deploy-contracts.ts",
    "deploy:contracts:localhost": "hardhat run scripts/deploy-contracts.ts --network localhost",
    "deploy:contracts:sepolia": "hardhat run scripts/deploy-contracts.ts --network sepolia",
    "deploy:contracts:mainnet": "hardhat run scripts/deploy-contracts.ts --network mainnet",
    "test:contracts": "hardhat test",
    "test:coverage": "hardhat coverage",
    "verify:contracts": "hardhat verify",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "setup:db": "psql -U postgres -f database/blockchain_schema.sql",
    "setup:env": "cp .env.example .env",
    "setup:all": "npm run setup:env && npm run setup:db && npm install",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.2",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "antd": "^5.27.4",
    "autoprefixer": "^10.4.21",
    "axios": "^1.12.2",
    "chalk": "^5.6.2",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "lucide-react": "^0.544.0",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "uuid": "^9.0.0",
    "vite": "^7.1.5",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "concurrently": "^9.2.1",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "ethers": "^6.15.0",
    "hardhat": "^3.0.6",
    "wait-on": "^9.0.0"
  },
  "build": {
    "appId": "com.lightdom.app",
    "productName": "LightDom Desktop",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
