#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit quality checks..."

# Validate search-first rule for new files
echo "ğŸ” Validating search-first rule..."
STAGED_NEW_FILES=$(git diff --cached --name-only --diff-filter=A | grep -E '\.(ts|tsx|js|jsx)$' || true)

if [ -n "$STAGED_NEW_FILES" ]; then
  echo "ğŸ“‹ New files detected - running search-first validation..."
  node scripts/validate-search-first-rule.js || {
    echo "âŒ Search-first rule validation failed!"
    echo "   Before committing new code, you must search for existing functionality."
    echo "   See .github/CODE_REVIEW_RULES.md for details."
    echo "   To bypass (not recommended): git commit --no-verify"
    exit 1
  }
  echo "âœ… Search-first rule validation passed"
else
  echo "âœ… No new files to validate"
fi
echo ""

# Run linting
echo "ğŸ“ Checking code formatting..."
npm run format:check || {
  echo "âŒ Code formatting issues found. Run 'npm run format' to fix."
  exit 1
}

# Run linting
echo "ğŸ” Running ESLint..."
npm run lint || {
  echo "âŒ Linting issues found. Run 'npm run lint:fix' to fix automatically."
  exit 1
}

# Run type checking
echo "ğŸ”§ Running TypeScript type checking..."
npm run type-check || {
  echo "âŒ TypeScript errors found."
  exit 1
}

# Run unit tests
echo "ğŸ§ª Running unit tests..."
npm run test:unit || {
  echo "âŒ Unit tests failed."
  exit 1
}

echo "âœ… Pre-commit checks passed!"