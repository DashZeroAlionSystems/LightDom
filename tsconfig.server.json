{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": ".",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "declaration": false,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "api-server-express.js",
    "api/**/*.js",
    "src/**/*",
    "services/**/*",
    "crawler/**/*",
    "minimal-api-server-*.js",
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": ["node_modules", "dist", "frontend", "contracts", "scripts", "build"]
}
