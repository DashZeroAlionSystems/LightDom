# LightDom Blockchain Automation System Configuration
# Copy this file to .env and customize for your environment

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================
BLOCKCHAIN_NETWORK=mainnet
BLOCKCHAIN_RPC_URL=http://localhost:8545
BLOCKCHAIN_PRIVATE_KEY=your_private_key_here
BLOCKCHAIN_GAS_PRICE=20000000000
BLOCKCHAIN_GAS_LIMIT=500000

# ===========================================
# AUTOMATION CONFIGURATION
# ===========================================
AUTOMATION_ENABLED=true
AUTOMATION_MAX_CONCURRENCY=10
AUTOMATION_RETRY_ATTEMPTS=3
AUTOMATION_TIMEOUT=30000

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
MONITORING_ENABLED=true
MONITORING_INTERVAL=30000
MONITORING_METRICS=true
MONITORING_ALERTS=true

# ===========================================
# SCALING CONFIGURATION
# ===========================================
SCALING_ENABLED=true
SCALING_AUTO_SCALE=true
SCALING_MIN_NODES=1
SCALING_MAX_NODES=10

# ===========================================
# PROJECT CONFIGURATION
# ===========================================
PROJECTS_LOAD_ON_STARTUP=true
PROJECTS_AUTO_START=true
PROJECTS_MAX_CONCURRENT=5

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
SECURITY_ENABLED=true
SECURITY_ENCRYPTION=true
SECURITY_AUTHENTICATION=true
SECURITY_RATE_LIMITING=true

# ===========================================
# API CONFIGURATION
# ===========================================
API_PORT=3000
API_HOST=localhost
API_CORS_ORIGIN=*

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/lightdom
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=lightdom
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FILE=logs/automation.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ===========================================
# PUPPETEER CONFIGURATION
# ===========================================
PUPPETEER_CACHE_DIR=./.puppeteer-cache
PUPPETEER_HEADLESS=true
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
NODE_ENV=development
DEBUG=lightdom:*
DRY_RUN=false
VERBOSE=false
