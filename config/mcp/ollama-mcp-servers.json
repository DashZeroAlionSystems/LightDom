{
    "mcpServers": {
        "lightdom-deepseek": {
            "command": "npx",
            "args": [
                "tsx",
                "src/mcp/deepseek-mcp-server.ts"
            ],
            "env": {
                "NODE_ENV": "development",
                "LOG_LEVEL": "info"
            },
            "disabled": false
        },
        "lightdom-n8n": {
            "command": "npx",
            "args": [
                "tsx",
                "src/mcp/n8n-mcp-server.ts"
            ],
            "env": {
                "N8N_BASE_URL": "http://localhost:5678",
                "N8N_API_KEY": "set-your-api-key",
                "NODE_ENV": "development"
            },
            "disabled": true
        },
        "lightdom-automation": {
            "command": "npx",
            "args": [
                "tsx",
                "src/mcp/automation-mcp-server.ts"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "disabled": false
        }
    },
    "bundles": {
        "deepseek-core": [
            "lightdom-deepseek"
        ],
        "deepseek-with-n8n": [
            "lightdom-deepseek",
            "lightdom-n8n"
        ],
        "deepseek-automation": [
            "lightdom-deepseek",
            "lightdom-automation"
        ],
        "deepseek-automation-n8n": [
            "lightdom-deepseek",
            "lightdom-automation",
            "lightdom-n8n"
        ]
    }
}