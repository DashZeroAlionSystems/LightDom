{
  "dashboard": {
    "id": null,
    "title": "LightDom Space-Bridge Platform",
    "tags": ["lightdom", "space-bridge", "analytics"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Space Mining Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(lightdom_space_mined_kb_total)",
            "legendFormat": "Total Space Mined (KB)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 1000
                },
                {
                  "color": "red",
                  "value": 5000
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Bridge Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(lightdom_bridge_messages_total[5m])",
            "legendFormat": "Messages/sec"
          },
          {
            "expr": "rate(lightdom_bridge_participants_total[5m])",
            "legendFormat": "Participants/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Database Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(postgresql_stat_database_tup_returned[5m])",
            "legendFormat": "Tuples Returned/sec"
          },
          {
            "expr": "rate(postgresql_stat_database_tup_fetched[5m])",
            "legendFormat": "Tuples Fetched/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Redis Cache Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(redis_commands_processed_total[5m])",
            "legendFormat": "Commands/sec"
          },
          {
            "expr": "redis_memory_used_bytes",
            "legendFormat": "Memory Used"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Application Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"lightdom-app\"}",
            "legendFormat": "App Status"
          },
          {
            "expr": "up{job=\"postgres\"}",
            "legendFormat": "DB Status"
          },
          {
            "expr": "up{job=\"redis\"}",
            "legendFormat": "Redis Status"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 24,
          "x": 0,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}