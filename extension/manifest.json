{
  "manifest_version": 3,
  "name": "LightDom Blockchain Extension",
  "version": "2.0.0",
  "description": "Advanced DOM optimization and blockchain mining extension with enhanced Chrome APIs",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "background",
    "scripting",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "sidePanel",
    "offscreen",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "userScripts",
    "contextMenus",
    "alarms"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "https://*/*",
    "file://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "storage-manager.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LightDom Blockchain",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "lightdom_rules",
        "enabled": true,
        "path": "declarative-rules.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lightdom-blockchain.js", 
        "blockchain-miner.js",
        "storage-manager.js",
        "declarative-net-request-manager.js",
        "offscreen-analyzer.js",
        "icons/*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "externally_connectable": {
    "matches": ["http://localhost:*/*", "https://*/*"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html",
  "commands": {
    "toggle-mining": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Toggle LightDom mining"
    },
    "open-sidepanel": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Open LightDom side panel"
    }
  }
}
