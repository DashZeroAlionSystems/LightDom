{
  "manifest_version": 3,
  "name": "LightDom DOM Space Miner",
  "version": "2.0.0",
  "description": "Advanced DOM optimization and blockchain mining extension",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "sidePanel",
    "offscreen",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "contextMenus",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:3001/*",
    "http://localhost:3000/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js",
        "blockchain-miner.js",
        "chat-bridge.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LightDom Miner"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_page": "options.html",
  "offline_enabled": false,
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "declarative-rules.json"
      }
    ]
  },
  "commands": {
    "toggle-mining": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Toggle DOM mining"
    },
    "open-sidepanel": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Open side panel"
    },
    "open-chat-bridge": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Open chat bridge"
    },
    "open-wallet": {
      "suggested_key": {
        "default": "Ctrl+Shift+W",
        "mac": "Command+Shift+W"
      },
      "description": "Open wallet"
    }
  },
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  }
}