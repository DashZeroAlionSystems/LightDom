{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://lightdom.io/schemas/workflow-prompt-schema.json",
  "title": "Workflow Prompt Schema",
  "description": "Schema for workflow-specific prompts and their expected outputs",
  "type": "object",
  "definitions": {
    "workflowPromptTemplate": {
      "type": "object",
      "required": ["id", "name", "template", "outputSchema"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^workflow-prompt-[a-z0-9-]+$"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "template": {
          "type": "string",
          "description": "The prompt template text with {{variable}} placeholders"
        },
        "variables": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/templateVariable"
          }
        },
        "outputSchema": {
          "$ref": "#/definitions/workflowOutputSchema"
        },
        "chainOfThought": {
          "$ref": "#/definitions/reasoningConfig"
        }
      }
    },
    "templateVariable": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["string", "number", "boolean", "object", "array"]
        },
        "required": {
          "type": "boolean",
          "default": true
        },
        "description": {
          "type": "string"
        },
        "default": {},
        "validation": {
          "type": "object",
          "properties": {
            "minLength": { "type": "integer" },
            "maxLength": { "type": "integer" },
            "pattern": { "type": "string" },
            "enum": { "type": "array" }
          }
        }
      }
    },
    "workflowOutputSchema": {
      "type": "object",
      "properties": {
        "workflow": {
          "$ref": "#/definitions/generatedWorkflow"
        }
      }
    },
    "generatedWorkflow": {
      "type": "object",
      "required": ["id", "name", "tasks"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z][a-zA-Z0-9_-]*$"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "description": {
          "type": "string"
        },
        "services": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/workflowService"
          }
        },
        "tasks": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/workflowTask"
          }
        },
        "schedule": {
          "$ref": "#/definitions/workflowSchedule"
        },
        "errorHandling": {
          "$ref": "#/definitions/errorHandlingConfig"
        },
        "monitoring": {
          "$ref": "#/definitions/monitoringConfig"
        }
      }
    },
    "workflowService": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["crawler", "seo-analyzer", "data-mining", "ml-training", "n8n", "database", "api"]
        },
        "config": {
          "type": "object"
        },
        "credentials": {
          "type": "string",
          "description": "Reference to stored credentials"
        }
      }
    },
    "workflowTask": {
      "type": "object",
      "required": ["id", "name", "type"],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["crawl", "extract", "transform", "analyze", "train", "store", "notify", "custom"]
        },
        "service": {
          "type": "string",
          "description": "Reference to a workflow service"
        },
        "config": {
          "type": "object"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "retryPolicy": {
          "type": "object",
          "properties": {
            "maxRetries": { "type": "integer", "minimum": 0 },
            "retryDelayMs": { "type": "integer", "minimum": 100 },
            "backoffMultiplier": { "type": "number", "minimum": 1 }
          }
        },
        "timeout": {
          "type": "integer",
          "description": "Task timeout in milliseconds"
        }
      }
    },
    "workflowSchedule": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "cron": {
          "type": "string",
          "description": "Cron expression for scheduling"
        },
        "timezone": {
          "type": "string",
          "default": "UTC"
        },
        "startDate": {
          "type": "string",
          "format": "date-time"
        },
        "endDate": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "errorHandlingConfig": {
      "type": "object",
      "properties": {
        "onError": {
          "type": "string",
          "enum": ["stop", "continue", "retry", "skip"],
          "default": "retry"
        },
        "maxRetries": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "default": 3
        },
        "notifyOnError": {
          "type": "boolean",
          "default": true
        },
        "errorNotificationChannel": {
          "type": "string",
          "enum": ["email", "slack", "webhook"]
        }
      }
    },
    "monitoringConfig": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "metrics": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["execution_time", "success_rate", "error_count", "throughput", "resource_usage"]
          }
        },
        "alerting": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "thresholds": {
              "type": "object",
              "additionalProperties": { "type": "number" }
            }
          }
        }
      }
    },
    "reasoningConfig": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "step": { "type": "integer" },
              "description": { "type": "string" },
              "action": { "type": "string" }
            }
          }
        },
        "selfReflection": {
          "type": "boolean",
          "default": true
        },
        "validation": {
          "type": "boolean",
          "default": true
        }
      }
    }
  },
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "templates": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/workflowPromptTemplate"
      }
    }
  }
}
