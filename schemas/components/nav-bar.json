{
  "@context": "https://schema.org",
  "@type": "Navigation",
  "@id": "lightdom:nav-bar",
  "name": "NavBar",
  "description": "Navigation bar organism with logo, menu items, and user actions",
  "lightdom:componentType": "organism",
  "lightdom:reactComponent": "NavBar",
  "lightdom:composedOf": [
    "lightdom:link",
    "lightdom:button",
    "lightdom:icon",
    "lightdom:badge"
  ],
  "lightdom:props": [
    {
      "name": "logo",
      "type": "string",
      "required": true,
      "description": "Logo image URL"
    },
    {
      "name": "menuItems",
      "type": "array",
      "required": true,
      "description": "Navigation menu items",
      "items": {
        "type": "object",
        "properties": {
          "label": { "type": "string" },
          "href": { "type": "string" },
          "icon": { "type": "string" },
          "badge": { "type": "string" }
        }
      }
    },
    {
      "name": "user",
      "type": "object",
      "required": false,
      "description": "Current user data"
    },
    {
      "name": "onLogout",
      "type": "function",
      "required": false,
      "description": "Logout handler"
    },
    {
      "name": "sticky",
      "type": "boolean",
      "required": false,
      "description": "Sticky header",
      "default": true
    }
  ],
  "lightdom:linkedSchemas": [
    "lightdom:link",
    "lightdom:button",
    "lightdom:icon"
  ],
  "lightdom:useCase": [
    "navigation",
    "header",
    "navbar",
    "menu",
    "app-bar"
  ],
  "lightdom:semanticMeaning": "Top navigation bar for site navigation",
  "lightdom:priority": 1,
  "lightdom:category": "organism"
}
