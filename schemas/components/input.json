{
  "@context": "https://schema.org",
  "@type": "TextInput",
  "@id": "lightdom:input",
  "name": "Input",
  "description": "Text input field component",
  "lightdom:componentType": "atom",
  "lightdom:reactComponent": "Input",
  "lightdom:props": [
    {
      "name": "name",
      "type": "string",
      "required": true,
      "description": "Input field name attribute"
    },
    {
      "name": "placeholder",
      "type": "string",
      "required": false,
      "description": "Placeholder text"
    },
    {
      "name": "type",
      "type": "string",
      "required": false,
      "description": "Input type",
      "enum": ["text", "email", "password", "number", "tel", "url", "search"],
      "default": "text"
    },
    {
      "name": "value",
      "type": "string",
      "required": false,
      "description": "Input value"
    },
    {
      "name": "defaultValue",
      "type": "string",
      "required": false,
      "description": "Default value"
    },
    {
      "name": "disabled",
      "type": "boolean",
      "required": false,
      "description": "Disabled state",
      "default": false
    },
    {
      "name": "required",
      "type": "boolean",
      "required": false,
      "description": "Required field",
      "default": false
    },
    {
      "name": "onChange",
      "type": "function",
      "required": false,
      "description": "Change event handler"
    },
    {
      "name": "onBlur",
      "type": "function",
      "required": false,
      "description": "Blur event handler"
    },
    {
      "name": "error",
      "type": "string",
      "required": false,
      "description": "Error message to display"
    }
  ],
  "lightdom:linkedSchemas": [],
  "lightdom:useCase": [
    "input",
    "form",
    "text-field",
    "data-entry",
    "user-input"
  ],
  "lightdom:semanticMeaning": "Text input field for user data entry",
  "lightdom:priority": 1,
  "lightdom:category": "atom"
}
