{
  "@context": "https://schema.org",
  "@type": "FormField",
  "@id": "lightdom:form-field",
  "name": "FormField",
  "description": "Form field molecule combining label, input, and error message",
  "lightdom:componentType": "molecule",
  "lightdom:reactComponent": "FormField",
  "lightdom:composedOf": [
    "lightdom:label",
    "lightdom:input",
    "lightdom:alert"
  ],
  "lightdom:props": [
    {
      "name": "name",
      "type": "string",
      "required": true,
      "description": "Field name"
    },
    {
      "name": "label",
      "type": "string",
      "required": true,
      "description": "Field label text"
    },
    {
      "name": "type",
      "type": "string",
      "required": false,
      "description": "Input type",
      "enum": ["text", "email", "password", "number", "tel", "url"],
      "default": "text"
    },
    {
      "name": "placeholder",
      "type": "string",
      "required": false,
      "description": "Placeholder text"
    },
    {
      "name": "required",
      "type": "boolean",
      "required": false,
      "description": "Required field",
      "default": false
    },
    {
      "name": "value",
      "type": "string",
      "required": false,
      "description": "Field value"
    },
    {
      "name": "error",
      "type": "string",
      "required": false,
      "description": "Error message"
    },
    {
      "name": "helpText",
      "type": "string",
      "required": false,
      "description": "Help text below the field"
    },
    {
      "name": "onChange",
      "type": "function",
      "required": false,
      "description": "Change handler"
    }
  ],
  "lightdom:linkedSchemas": [
    "lightdom:label",
    "lightdom:input",
    "lightdom:alert"
  ],
  "lightdom:useCase": [
    "form-field",
    "input-group",
    "labeled-input",
    "form-control"
  ],
  "lightdom:semanticMeaning": "Complete form field with label, input, and validation",
  "lightdom:priority": 1,
  "lightdom:category": "molecule",
  "lightdom:assemblyPattern": {
    "structure": "vertical",
    "components": [
      {
        "atom": "lightdom:label",
        "props": {
          "text": "{{label}}",
          "htmlFor": "{{name}}",
          "required": "{{required}}"
        }
      },
      {
        "atom": "lightdom:input",
        "props": {
          "name": "{{name}}",
          "type": "{{type}}",
          "placeholder": "{{placeholder}}",
          "value": "{{value}}",
          "required": "{{required}}",
          "onChange": "{{onChange}}"
        }
      },
      {
        "atom": "lightdom:alert",
        "condition": "{{error}}",
        "props": {
          "message": "{{error}}",
          "type": "error"
        }
      }
    ]
  }
}
