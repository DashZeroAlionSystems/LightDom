# LightDom Blockchain Application Configuration
# Copy this file to .env and update with your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/lightdom_blockchain
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lightdom_blockchain
DB_USER=postgres
DB_PASSWORD=postgres
DB_DISABLED=false

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
# Network configuration
NETWORK=localhost
RPC_URL=http://localhost:8545
CHAIN_ID=1337

# Wallet configuration
PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
ADMIN_ADDRESS=0x1234567890abcdef1234567890abcdef12345678

# Contract addresses (update after deployment)
LIGHTDOM_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
OPTIMIZATION_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
VIRTUAL_LAND_NFT_ADDRESS=0x0000000000000000000000000000000000000000
PROOF_OF_OPTIMIZATION_ADDRESS=0x0000000000000000000000000000000000000000

# Gas configuration
GAS_PRICE=20000000000
GAS_LIMIT=5000000
MAX_GAS_PRICE=100000000000

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
PORT=3001
NODE_ENV=development
API_KEY=your-secret-api-key-here
CORS_ORIGIN=http://localhost:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_URL=http://localhost:3001
VITE_BLOCKCHAIN_ENABLED=true
VITE_NETWORK_NAME=localhost
VITE_CHAIN_ID=1337

# =============================================================================
# BLOCKCHAIN AUTOMATION
# =============================================================================
BLOCKCHAIN_ENABLED=true
HEADLESS_CHROME=true
CHROME_DEVTOOLS=false
MINING_ENABLED=true
AUTO_OPTIMIZATION=true

# =============================================================================
# MONITORING & METRICS
# =============================================================================
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
LOG_LEVEL=info

# Performance monitoring
PERFORMANCE_MONITORING=true
ERROR_TRACKING=true
ANALYTICS_ENABLED=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h

# Session configuration
SESSION_SECRET=your-session-secret-key-here
SESSION_MAX_AGE=86400000

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Etherscan API (for contract verification)
ETHERSCAN_API_KEY=your-etherscan-api-key-here

# IPFS configuration (for decentralized storage)
IPFS_URL=http://localhost:5001
IPFS_GATEWAY=https://ipfs.io/ipfs/

# Web3 providers
ALCHEMY_API_KEY=your-alchemy-api-key-here
INFURA_API_KEY=your-infura-api-key-here

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Test configuration
TEST_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
TEST_RPC_URL=http://localhost:8545

# Coverage reporting
REPORT_GAS=true
COVERAGE_ENABLED=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Production settings
PRODUCTION=false
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Docker configuration
DOCKER_ENABLED=false
DOCKER_COMPOSE_FILE=docker-compose.yml

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
FEATURE_STAKING=true
FEATURE_MINING=true
FEATURE_METAVERSE=true
FEATURE_NFT=true
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL (in seconds)
CACHE_TTL=3600
OPTIMIZATION_CACHE_TTL=1800
USER_CACHE_TTL=7200

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@lightdom.io

# =============================================================================
# FILE STORAGE
# =============================================================================
# Local storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,text/plain,application/pdf

# Cloud storage (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=lightdom-uploads

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log levels: error, warn, info, debug
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Database backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=./backups

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
# Health check endpoints
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================
# Add your custom environment variables here
CUSTOM_CONFIG_1=
CUSTOM_CONFIG_2=
CUSTOM_CONFIG_3=
