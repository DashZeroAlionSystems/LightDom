        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Optimize Website",
      "short_name": "Optimize",
      "description": "Start optimizing a website",
      "url": "/optimize",
      "icons": [
        {
          "src": "/icons/shortcut-optimize.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Wallet",
      "short_name": "Wallet",
      "description": "Manage your tokens and wallet",
      "url": "/wallet",
      "icons": [
        {
          "src": "/icons/shortcut-wallet.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Settings",
      "short_name": "Settings",
      "description": "Manage your account settings",
      "url": "/settings",
