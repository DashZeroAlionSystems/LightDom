  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "LightDom Dashboard on Desktop"
    },
    {
      "src": "/screenshots/mobile-dashboard.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "LightDom Dashboard on Mobile"
    },
    {
      "src": "/screenshots/optimization-results.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Website Optimization Results"
    },
    {
      "src": "/screenshots/wallet-interface.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Token Wallet Interface"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "related_applications": [
    {
      "platform": "web",
      "url": "https://lightdom.com",
      "id": "com.lightdom.web"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+lightdom",
      "url": "/handle?protocol=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "text/html": [".html", ".htm"],
        "text/css": [".css"],
        "application/javascript": [".js"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["text/html", "text/css", "application/javascript"]
        }
      ]
    }
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "capture_links": "new-client"
}
