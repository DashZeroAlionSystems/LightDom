{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Copilot Console Configuration",
  "type": "object",
  "properties": {
    "placeholder": { "type": "string" },
    "hero": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "subtitle": { "type": "string" },
        "showBanner": { "type": "boolean" }
      }
    },
    "recentSessions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "repo": { "type": "string" },
          "timestamp": { "type": "string" }
        },
        "required": ["id","title"]
      }
    }
  }
}
