    "axios": "^1.5.0",
    "zustand": "^4.4.1",
    "ethers": "^6.7.0",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.263.1",
    "recharts": "^2.8.0",
    "react-hook-form": "^7.45.4",
    "@hookform/resolvers": "^3.3.1",
    "zod": "^3.22.2",
    "date-fns": "^2.30.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^1.14.0",
